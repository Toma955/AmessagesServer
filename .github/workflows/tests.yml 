name: Node.js Tests

on:
  push:
  pull_request:

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Use Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '22'   # ili verzija koju koristi≈° lokalno

      - name: Install dependencies
        run: npm ci

      - name: Run tests
        run: npm test
